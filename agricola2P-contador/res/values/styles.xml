<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EstiloTabla">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EstiloTitulo">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:width">70dp</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EstiloInput">
        <item name="android:inputType">numberSigned</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#80ffffff</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>